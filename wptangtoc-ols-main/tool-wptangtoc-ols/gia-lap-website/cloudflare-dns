#!/bin/bash

EMAIL=$(cat /etc/wptt/gia-lap-website/auth.json | python2 -c "import sys, json; print(json.load(sys.stdin)['cloudflare']['email'])")
KEY=$(cat /etc/wptt/gia-lap-website/auth.json | python2 -c "import sys, json; print(json.load(sys.stdin)['cloudflare']['key'])")
zones=$(cat /etc/wptt/gia-lap-website/auth.json | python2 -c "import sys, json; print(json.load(sys.stdin)['cloudflare']['zones'])")

function dns_wptangtoc_ols(){
curl -X POST "https://api.cloudflare.com/client/v4/zones/$zones/dns_records" \
     -H "X-Auth-Email: $EMAIL" \
     -H "X-Auth-Key: $KEY" \
     -H "Content-Type: application/json" \
     --data '{"type":"A","name":"'$1'","content":"'$2'","ttl":3600,"priority":10,"proxied":false}'
}

dns_wptangtoc_ols "$1" "$2" >/dev/null 2>&1

