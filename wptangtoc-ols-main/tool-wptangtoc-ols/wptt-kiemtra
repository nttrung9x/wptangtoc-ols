#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @since: 2022
. /etc/wptt/echo-color
_runing "Quét hệ thống"


kiemtra() {
	. /etc/wptt/.wptt.conf
	virtua=$(virt-what)
	if [[ ${virtua} ]]; then
		virt="$virtua"
	else
		virt="No Virt"
	fi
	toc_do_o_cung() {
		(LANG=C dd if=/dev/zero of=test_$$ bs=64k count=16k conv=fdatasync && rm -f test_$$) 2>&1 | awk -F, '{io=$NF} END { print io}' | sed 's/^[ \t]*//;s/[ \t]*$//'
	}
    org="$(wget -q -T10 -O- ipinfo.io/org)"
    city="$(wget -q -T10 -O- ipinfo.io/city)"
    country="$(wget -q -T10 -O- ipinfo.io/country)"
    region="$(wget -q -T10 -O- ipinfo.io/region)"
	disk_speed=$(toc_do_o_cung)
	phpcheck222=$(php -v | grep cli | cut -c 4-10)
	ip=$(curl -s myip.directadmin.com)
	if [[ "$ip" = "" ]]; then
		ip=$(curl -s ifconfig.me)
	fi
	hedieuhanh=$(hostnamectl | grep System | cut -f2 -d':'|sed 's/^ //g')
	checkmariaversion=$(mysqld --version | grep mysqld | cut -f4 -d " " | grep '^1' |cut -f1-3 -d '.' | cut -f1 -d '-')
	cname=$(awk -F: '/model name/ {name=$2} END {print name}' /proc/cpuinfo | sed 's/^[ \t]*//;s/[ \t]*$//')
	cores=$(awk -F: '/model name/ {core++} END {print core}' /proc/cpuinfo)
	freq=$(awk -F: '/cpu MHz/ {freq=$2} END {print freq}' /proc/cpuinfo | sed 's/^[ \t]*//;s/[ \t]*$//')
	tram=$(free -m | awk '/Mem/ {print $2}')
	uram=$(free -m | awk '/Mem/ {print $3}')
	swap=$(free -m | awk '/Swap/ {print $2}')
	uswap=$(free -m | awk '/Swap/ {print $3}')
	up=$(awk '{a=$1/86400;b=($1%86400)/3600;c=($1%3600)/60} {printf("%d ngày, %d giờ %d phút\n",a,b,c)}' /proc/uptime)
	load=$(w | head -1 | awk -F'load average:' '{print $2}' | sed 's/^[ \t]*//;s/[ \t]*$//')
	arch=$(uname -m)
	lbit=$(getconf LONG_BIT)
	kern=$(uname -r)
	date=$(date)
	disk=$(df -BG | awk '$NF=="/"{printf "%d/%dGB (%s)\n", $3,$2,$5}')
	openlitespeed_check_version=$(/usr/local/lsws/bin/lshttpd -v | grep LiteSpeed | cut -f1 -d " " | cut -c 11-40)
	_rundone "Quét hệ thống"
	clear
	echo "+====================================================+"
	echo "|Thông tin hệ thống của bạn		     |"
	echo "+====================================================+"
	echo "Webserver OLS		: $(systemctl status lshttpd.service | grep 'enabled' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs) : v$openlitespeed_check_version"
	echo "MariaDB			: $(systemctl status mariadb.service | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs) : v$checkmariaversion"
	echo "PHP Phiên bản		:$phpcheck222"
	echo "WPTangToc OLS		: $version_wptangtoc_ols"
	echo "CPU model            	: $cname"
	echo "Number of cores      	: $cores"
	echo "CPU frequency        	: $freq MHz"
	echo "Total size of Disk   	: $disk"
	echo "Tốc độ disk		: $disk_speed"
	echo "Total amount of Mem  	: $tram MB ($uram MB Used)"
	echo "Total amount of Swap 	: $swap MB ($uswap MB Used)"
	echo "System uptime        	: $up"
	echo "Load average         	: $load"
	echo "OS                   	: $hedieuhanh"
	echo "Arch                 	: $arch ($lbit Bit)"
	echo "Kernel               	: $kern"
	echo "Virt                 	: $virt"
	echo "IP                   	: $ip"
	echo "Date                 	: $date"
    if [[ -n "$org" ]]; then
    	echo "Organization		: $org"
    fi
    if [[ -n "$city" && -n "country" ]]; then
    	echo "Location		: $city / $country"
    fi
    if [[ -n "$region" ]]; then
    	echo "Region			: $region"
    fi
}
kiemtra
echo "======================================================"
echo "Kiểm tra tốc độ internet"

speed_internet_test() {
        local speedtest=$(wget -4O /dev/null -T300 $1 2>&1 | awk '/\/dev\/null/ {speed=$3 $4} END {gsub(/\(|\)/,"",speed); print speed}')
        local nodeName=$2
        echo "${nodeName}====>>>> ${speedtest}"
}

speed() {
        speed_internet_test 'http://speedtest1.vtn.com.vn/speedtest/random4000x4000.jpg' 'VNPT, TD Ha Noi, Viet Nam'
        speed_internet_test 'http://speedtest3.vtn.com.vn/speedtest/random4000x4000.jpg' 'VNPT, Ho Chi Minh, Viet Nam'
        speed_internet_test 'http://speedtestkv1a.viettel.vn/speedtest/random4000x4000.jpg' 'Viettel, TD Ha Noi, Viet Nam'
        speed_internet_test 'http://speedtestkv3a.viettel.vn/speedtest/random4000x4000.jpg' 'Viettel, TP Ho Chi Minh, Viet Nam'
}
echo "======================================================"
speed
echo "======================================================"


check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
wptangtoc 1
fi

