#RewriteRule ^(.*)$ \/wp-content\/cache\/wptangtoc\/%{HTTP_HOST}%{REQUEST_URI}\/index.html [L]\
#<\/IfModule>\
##end-cache-wptangtoc' /usr/local/lsws/"$NAME"/html/.htaccess
