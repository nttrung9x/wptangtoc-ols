#!/bin/bash
function echoVang
{
    echo -e "\033[38;5;148m${1}\033[39m"
}

function echoDo
{
    echo -e "\033[38;5;9m${1}\033[39m"
}

function echoBlue
{
    echo -e "\033[38;5;21m${1}\033[39m"
}

function echoXanhlacay
{
    echo -e "\033[38;5;28m${1}\033[39m"
}

function echoDone
{
    echo -e "\033[38;5;41m${1}\033[39m"
}

function echoCam
{
    echo -e "\033[38;5;203m${1}\033[39m"
}

function echoXam
{
    echo -e "\033[1;3;94m${1}\033[0m"
}

function _runing
{
    echo -ne "$1""\t""[\033[38;5;148mĐang tiến hành...\033[39m]" "\r"
}

function _rundone
{
    echo -e "\r""$1""\t""[\033[38;5;28mHoàn tất\033[39m]        " "\r"
	sleep 0.4
}

function _runloi
{
    echo -e "\r""$1""\t""[\033[38;5;9mĐã xảy ra sự cố\033[39m]     " "\r"
}

