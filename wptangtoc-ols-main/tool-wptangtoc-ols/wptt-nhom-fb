#!/bin/bash
clear
RED='\033[0;31m'
NC='\033[0m'

echo -e "${RED}
     .:..........................             
      .::::::::::::::::::::::::::::..         
        ..:::::::::::::::::::::::::::::.      
                             ...:::::::::.    
                                  .:::::::.   
          .:::::::.         .       .:::::::  
         .::::::::::::::::::::..      ::::::: 
         ::::::::::::::::::::::::.     ::::::.
        .::::::::::::::::::::::::::.   .:::::.
        .::::::::::::::::::::::::::::  .:::::.
        .::::::::::::::::::::::::::.   .:::::.
         ::::::::::::::::::::::::.     ::::::.
.::::::  .:::::::::::::::::::::.      ::::::. 
          .:::::::.                 .:::::::  
       ::::::::::::.              .:::::::.   
       ......:::::::::...    ...:::::::::.    
               .:::::::::::::::::::::::.      
   ..............::::::::::::::::::..         
  .:::::::::::::................. ${NC}"




  nam=$(date +'%Y')
  echo "CỘNG ĐỒNG TĂNG TỐC ĐỘ WORDPRESS $nam"
  echo "Đường link: https://www.facebook.com/groups/wptangtoc"
  echo "Nơi chia sẻ trao đổi thảo luận các vấn đề liên quan về WPTangToc OLS"
check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
sleep 10
wptangtoc 1
fi

