#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý Database => Xóa toàn bộ dữ liệu database                       |"
echo "========================================================================="
. /etc/wptt/.wptt.conf

NAME=$1

if [[ $NAME = '98' ]];then
NAME=''
fi

if [[ $NAME = '' ]];then
. /etc/wptt/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn xóa toàn bộ dữ liệu Database: "
echo ""
lua_chon_NAME
fi

. /etc/wptt/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
	. /etc/wptt/wptt-db-main 1
    exit
fi

_runing "Xóa toàn bộ dữ liệu database của website $NAME"
. /etc/wptt/vhost/."$NAME".conf
mysql -u "$database_admin_username" -p"$database_admin_password" -e "DROP DATABASE $DB_Name_web"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "CREATE DATABASE IF NOT EXISTS $DB_Name_web"
_rundone "Xóa toàn bộ dữ liệu database của website $NAME"

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-db-main 1
fi

