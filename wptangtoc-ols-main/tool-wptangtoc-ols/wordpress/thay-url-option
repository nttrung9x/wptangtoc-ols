#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý WordPress => Cập nhật home va siteurl cho WordPress            |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn cập nhật home va siteurl cho WordPress: "
echo ""
lua_chon_NAME

. /etc/wptt/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
    . /etc/wptt/wptt-wordpress-main 1
    exit
fi

pathcheckwp="/usr/local/lsws/$NAME/html/wp-load.php"
if [[ ! -f "$pathcheckwp" ]]; then
  clear
  echoDo "Hệ thống xác nhận bạn không sử dụng WordPress"
  echoDo "Tính năng này chỉcó thể hoạt động trên WordPress"
  sleep 3
  . /etc/wptt/wptt-wordpress-main 1
  exit
fi

if [[ -f /usr/local/lsws/$NAME/html/wp-config.php ]]; then
    if [[ -f "/etc/letsencrypt/live/$NAME/cert.pem" || -d /usr/local/lsws/$NAME/ssl ]]; then
_runing "update Home URL website $NAME thành: https://$NAME"
        wp option update home "https://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1 --skip-plugin=$(cat /etc/wptt/ioncube-plugin-list | tr  '\n' ',')
        wp option update siteurl "https://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1 --skip-plugin=$(cat /etc/wptt/ioncube-plugin-list | tr  '\n' ',')
_rundone "update Home URL website $NAME thành: https://$NAME"
    else
_runing "update Home URL website $NAME thành: http://$NAME"
        wp option update home "http://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1 --skip-plugin=$(cat /etc/wptt/ioncube-plugin-list | tr  '\n' ',')
        wp option update siteurl "http://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1 --skip-plugin=$(cat /etc/wptt/ioncube-plugin-list | tr  '\n' ',')
_rundone "update Home URL website $NAME thành: http://$NAME"
    fi

else
    echo "Bạn không sử dụng mã nguồn WordPress"
fi
check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-wordpress-main 1
fi
